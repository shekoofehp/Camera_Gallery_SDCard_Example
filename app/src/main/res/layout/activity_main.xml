<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}" 
    android:orientation="vertical">

    <Button
        android:id="@+id/openCameraBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/open_camera"
        android:onClick="cameraClick"
        android:background="#0054a6"
        android:padding="15dp" 
        android:textColor="#ffffff"/>
    <Button
        android:id="@+id/ShowSDCardSubFolderImageBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="@string/show_sd_card_subfolder_image"
        android:onClick="showSdCardSubfolderImageClick"
        android:background="#0054a6"
        android:padding="15dp"
        android:textColor="#ffffff"/>
    <Button
        android:id="@+id/GalleryImagePickBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="@string/pick_gallery_image"
        android:onClick="galleryImagePickClick"
        android:background="#0054a6"
        android:padding="15dp"
        android:textColor="#ffffff"/>
    <Button
        android:id="@+id/LoadImagefromSDCardBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text="@string/pick_sd_card_image"
        android:onClick="sdCardImagePickClick"
        android:background="#0054a6"
        android:padding="15dp"
        android:textColor="#ffffff"/>

    <ImageView
        android:id="@+id/image"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>